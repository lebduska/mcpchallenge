{
  "name": "mcpchallenge",
  "version": "0.1.0",
  "description": "Interactive platform for learning Model Context Protocol (MCP) through hands-on coding challenges. Build MCP servers, connect AI agents, and earn achievements.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:dev": "npx wrangler pages dev .vercel/output/static --compatibility-flags=nodejs_compat",
    "pages:deploy": "npm run pages:build && npx wrangler pages deploy .vercel/output/static --project-name=mcpchallenge",
    "deploy": "npm run pages:deploy",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx wrangler d1 migrations apply mcpchallenge-db --remote",
    "db:migrate:local": "npx wrangler d1 migrations apply mcpchallenge-db --local"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.1",
    "@mcpchallenge/challenge-registry": "file:./packages/challenge-registry",
    "@monaco-editor/react": "^4.7.0",
    "@next/third-parties": "^16.1.6",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@swc/helpers": "^0.5.18",
    "@types/matter-js": "^0.20.2",
    "@vercel/og": "^0.8.6",
    "bcryptjs": "^3.0.3",
    "canvas-confetti": "^1.9.4",
    "chess.js": "^1.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "flag-icons": "^7.5.0",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.563.0",
    "matter-js": "^0.20.0",
    "next": "15.5.2",
    "next-auth": "^5.0.0-beta.30",
    "next-intl": "^4.8.1",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-chessboard": "^4.7.3",
    "react-dom": "19.2.3",
    "stockfish": "^17.1.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@cloudflare/workers-types": "^4.20260131.0",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wrangler": "^4.61.1"
  }
}
